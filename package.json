{
	"name": "webvalidator",
	"displayName": "Web Validator",
	"description": "Check the validity of your HTML and CSS files with the W3C Validator API",
	"publisher": "CelianRiboulet",
	"version": "1.0.9",
	"icon": "images/webvalidator.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/celian-rib/vscode-webvalidation-extension"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"validator",
		"W3C",
		"HTML",
		"CSS",
		"html",
		"validation",
		"standard",
		"web validator",
		"web"
	],
	"galleryBanner": {
		"color": "#232323",
		"theme": "dark"
	},
	"activationEvents": [
		"onStartupFinished",
		"onCommand:webvalidator.startvalidation",
		"onCommand:webvalidator.clearvalidation"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "webvalidator.startvalidation",
				"title": "Start Web validation on this file"
			},
			{
				"command": "webvalidator.clearvalidation",
				"title": "Clear Web validation issues on file"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.3",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"rewire": "^5.0.0"
	}
}
